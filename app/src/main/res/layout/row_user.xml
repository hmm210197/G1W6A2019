<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/container_user"
                                             android:background="@drawable/bg_round_corner"
                                             android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
                                             android:layout_marginStart="10dp" android:layout_marginEnd="10dp">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userName" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="8dp" android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/btnDeleteUser"
            android:layout_marginEnd="8dp" android:textColor="@android:color/white"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_delete"
            android:id="@+id/btnDeleteUser" android:padding="0dp"
            android:background="@android:color/transparent" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/userName" android:layout_marginTop="3dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numTaskAssigned"
            app:layout_constraintTop_toBottomOf="@+id/userName" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/userName" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="12sp" android:padding="3dp"
            android:layout_marginStart="5dp" android:background="@drawable/bg_w_round_corner"
            android:paddingStart="10dp" android:paddingEnd="10dp"/>
</android.support.constraint.ConstraintLayout>